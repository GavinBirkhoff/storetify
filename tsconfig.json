{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./dist",
    "importHelpers": true,
    // "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "**/*.spec.ts"],
  "exclude": ["node_modules"],
}
