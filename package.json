{
  "name": "storetify",
  "version": "1.0.0",
  "description": "Better localStorage, subscribable localStorage, expirable localStorage",
  "main": "./lib/storetify.cjs.js",
  "module": "./lib/storetify.esm.js",
  "browser": "./lib/storetify.min.js",
  "unpkg": "./lib/storetify.min.js",
  "types": "./lib/storetify.d.ts",
  "scripts": {
    "init": "npm install && npm run build",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest --no-cache",
    "build": "npm run build:es & npm run build:lib",
    "build:es": "rm -rf ./dist/* && rm -rf ./types/* && tsc",
    "build:lib": "rm -rf ./lib/* && rollup -c",
    "prepublishOnly": "npm run test && npm run build",
    "pub": "npm publish"
  },
  "keywords": [
    "localStorage",
    "store",
    "subscribe",
    "listener"
  ],
  "files": [
    "lib",
    "types",
    "README.md",
    "LICENSE"
  ],
  "author": "Gavin Birkhoff <gavinbirkhoff@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src*/**/*.ts": [
      "prettier --config .prettierrc.js --write",
      "eslint",
      "git add"
    ],
    "src*/**/*.json": [
      "prettier --config .prettierrc.js --write",
      "eslint",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/GavinBirkhoff/storetify/issues"
  },
  "homepage": "https://github.com/GavinBirkhoff/storetify#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-license": "^2.8.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "ts-jest": "^28.0.5",
    "tslib": "^1.14.1",
    "typescript": "^4.7.4"
  }
}